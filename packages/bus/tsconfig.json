{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
          "es5",
          "es6",
          "es7",
          "es2017",
          "esnext",
          "DOM",
          "DOM.Iterable"
        ],
        
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}